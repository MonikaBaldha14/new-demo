<div class="footer-main-block">
  <section class="main-content">

    {% comment %} Services Block  {% endcomment %}

    <div class="main-services-block">
      {% for block in section.blocks %}
        <div class="services-inner-main">
          {% if block.settings.svg-img == blank %}
            <svg class="placeholder-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 525.5 525.5"><path d="M324.5 212.7H203c-1.6 0-2.8 1.3-2.8 2.8V308c0 1.6 1.3 2.8 2.8 2.8h121.6c1.6 0 2.8-1.3 2.8-2.8v-92.5c0-1.6-1.3-2.8-2.9-2.8zm1.1 95.3c0 .6-.5 1.1-1.1 1.1H203c-.6 0-1.1-.5-1.1-1.1v-92.5c0-.6.5-1.1 1.1-1.1h121.6c.6 0 1.1.5 1.1 1.1V308z"></path><path d="M210.4 299.5H240v.1s.1 0 .2-.1h75.2v-76.2h-105v76.2zm1.8-7.2l20-20c1.6-1.6 3.8-2.5 6.1-2.5s4.5.9 6.1 2.5l1.5 1.5 16.8 16.8c-12.9 3.3-20.7 6.3-22.8 7.2h-27.7v-5.5zm101.5-10.1c-20.1 1.7-36.7 4.8-49.1 7.9l-16.9-16.9 26.3-26.3c1.6-1.6 3.8-2.5 6.1-2.5s4.5.9 6.1 2.5l27.5 27.5v7.8zm-68.9 15.5c9.7-3.5 33.9-10.9 68.9-13.8v13.8h-68.9zm68.9-72.7v46.8l-26.2-26.2c-1.9-1.9-4.5-3-7.3-3s-5.4 1.1-7.3 3l-26.3 26.3-.9-.9c-1.9-1.9-4.5-3-7.3-3s-5.4 1.1-7.3 3l-18.8 18.8V225h101.4z"></path><path d="M232.8 254c4.6 0 8.3-3.7 8.3-8.3s-3.7-8.3-8.3-8.3-8.3 3.7-8.3 8.3 3.7 8.3 8.3 8.3zm0-14.9c3.6 0 6.6 2.9 6.6 6.6s-2.9 6.6-6.6 6.6-6.6-2.9-6.6-6.6 3-6.6 6.6-6.6z"></path></svg>
            {% else %}
            <div class="services-img-logo">
              <div class="svg_img">{{ block.settings.svg-img }}</div>
            </div>
          {% endif %}
          <div class="services-content">
            <h3 class="services-head">{{ block.settings.services-head }}</h3>
            <p class="services-content-inner">{{ block.settings.services-content }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    {% comment %} Footer Middle Block  {% endcomment %}

    <div class="main-footer-middle">
      <div class="footer-blocks footer-first">
        {% if section.settings.footer-logo == blank %}
          <svg class="placeholder-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 525.5 525.5"><path d="M324.5 212.7H203c-1.6 0-2.8 1.3-2.8 2.8V308c0 1.6 1.3 2.8 2.8 2.8h121.6c1.6 0 2.8-1.3 2.8-2.8v-92.5c0-1.6-1.3-2.8-2.9-2.8zm1.1 95.3c0 .6-.5 1.1-1.1 1.1H203c-.6 0-1.1-.5-1.1-1.1v-92.5c0-.6.5-1.1 1.1-1.1h121.6c.6 0 1.1.5 1.1 1.1V308z"></path><path d="M210.4 299.5H240v.1s.1 0 .2-.1h75.2v-76.2h-105v76.2zm1.8-7.2l20-20c1.6-1.6 3.8-2.5 6.1-2.5s4.5.9 6.1 2.5l1.5 1.5 16.8 16.8c-12.9 3.3-20.7 6.3-22.8 7.2h-27.7v-5.5zm101.5-10.1c-20.1 1.7-36.7 4.8-49.1 7.9l-16.9-16.9 26.3-26.3c1.6-1.6 3.8-2.5 6.1-2.5s4.5.9 6.1 2.5l27.5 27.5v7.8zm-68.9 15.5c9.7-3.5 33.9-10.9 68.9-13.8v13.8h-68.9zm68.9-72.7v46.8l-26.2-26.2c-1.9-1.9-4.5-3-7.3-3s-5.4 1.1-7.3 3l-26.3 26.3-.9-.9c-1.9-1.9-4.5-3-7.3-3s-5.4 1.1-7.3 3l-18.8 18.8V225h101.4z"></path><path d="M232.8 254c4.6 0 8.3-3.7 8.3-8.3s-3.7-8.3-8.3-8.3-8.3 3.7-8.3 8.3 3.7 8.3 8.3 8.3zm0-14.9c3.6 0 6.6 2.9 6.6 6.6s-2.9 6.6-6.6 6.6-6.6-2.9-6.6-6.6 3-6.6 6.6-6.6z"></path></svg>
          {% else %}
          <div class="footer-inner-one">
            <img
              class="footer-img"
              src="{{ section.settings.footer-logo |  img_url: 'master' }}"
              alt="Footer logo">
          </div>
        {% endif %}
        <div class="footer-inner-two">
          <p class="address">{{ section.settings.address }}</p>
          <p class="mail">{{ section.settings.email }}</p>
          <p class="phone">{{ section.settings.number }}</p>
        </div>
        <div class="footer-inner-three">
          <ul class="footer_nav footer-nav-second">
            <li>
              <a href="/" class="footer-nav-social-media">
                <i class="fa fa-facebook" aria-hidden="true"></i>
              </a>
            </li>
            <li>
              <a href="/" class="footer-nav-social-media">
                <i class="fa fa-twitter" aria-hidden="true"></i>
              </a>
            </li>
            <li>
              <a href="/" class="footer-nav-social-media">
                <i class="fa fa-instagram" aria-hidden="true"></i>
              </a>
            </li>
            <li>
              <a href="/" class="footer-nav-social-media">
                <i class="fa fa-youtube-play" aria-hidden="true"></i>
              </a>
            </li>


            <li>
              <a href="/" class="footer-nav-social-media">
                <i class="fa fa-pinterest" aria-hidden="true"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>

      {% comment %} Footer Links  {% endcomment %}

      <div class="footer-blocks footer-links-main">
        <div class="footer-links-inner-main">
          <ul class="footer-links">
            {% for link in section.settings.footer-link.links %}
              <li class="footer-main-links">
                <a class="mynav-footer-item-list" href="{{ link.url }}">{{ link.title }}</a>
                <i class="down-arrow fa fa-angle-down" aria-hidden="true"></i>

                {% if link.links != blank %}
                  <ul class="mynav-footer-child-list-toggle">
                    {% for childlink in link.links %}
                      <li class="child-footer-menu-toggle">
                        <a class="child-footer-list-item-toggle" href="{{ childlink.url }}">{{ childlink.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>


      {% comment %} Footer Subscribe Block  {% endcomment %}

      <div class="footer-blocks main-subscribe-block">
        <div class="footer-title">
          <h2 class="footer-heading">{{ section.settings.footer-title }}</h2>
          <p class="footer-content">{{ section.settings.footer-content }}</p>
        </div>
        <div class="footer-input">
          <form class="subscribe-form" action="/contact" method="post">
            <input
              class="subscribe"
              type="email"
              name="mail"
              placeholder="your mail address"
              required>
            {% comment %} <span class="join">join</span> {% endcomment %}
            <button type="submit" class="join">join</button>
          </form>
        </div>
      </div>
    </div>
    {% comment %} Footer Last Block  {% endcomment %}

    <div class="footer-last">
      <div class="caption">
        <p class="caption">{{ section.settings.caption }}</p>
      </div>
      {% if section.settings.payment-img == blank %}
        <svg class="placeholder-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 525.5 525.5"><path d="M324.5 212.7H203c-1.6 0-2.8 1.3-2.8 2.8V308c0 1.6 1.3 2.8 2.8 2.8h121.6c1.6 0 2.8-1.3 2.8-2.8v-92.5c0-1.6-1.3-2.8-2.9-2.8zm1.1 95.3c0 .6-.5 1.1-1.1 1.1H203c-.6 0-1.1-.5-1.1-1.1v-92.5c0-.6.5-1.1 1.1-1.1h121.6c.6 0 1.1.5 1.1 1.1V308z"></path><path d="M210.4 299.5H240v.1s.1 0 .2-.1h75.2v-76.2h-105v76.2zm1.8-7.2l20-20c1.6-1.6 3.8-2.5 6.1-2.5s4.5.9 6.1 2.5l1.5 1.5 16.8 16.8c-12.9 3.3-20.7 6.3-22.8 7.2h-27.7v-5.5zm101.5-10.1c-20.1 1.7-36.7 4.8-49.1 7.9l-16.9-16.9 26.3-26.3c1.6-1.6 3.8-2.5 6.1-2.5s4.5.9 6.1 2.5l27.5 27.5v7.8zm-68.9 15.5c9.7-3.5 33.9-10.9 68.9-13.8v13.8h-68.9zm68.9-72.7v46.8l-26.2-26.2c-1.9-1.9-4.5-3-7.3-3s-5.4 1.1-7.3 3l-26.3 26.3-.9-.9c-1.9-1.9-4.5-3-7.3-3s-5.4 1.1-7.3 3l-18.8 18.8V225h101.4z"></path><path d="M232.8 254c4.6 0 8.3-3.7 8.3-8.3s-3.7-8.3-8.3-8.3-8.3 3.7-8.3 8.3 3.7 8.3 8.3 8.3zm0-14.9c3.6 0 6.6 2.9 6.6 6.6s-2.9 6.6-6.6 6.6-6.6-2.9-6.6-6.6 3-6.6 6.6-6.6z"></path></svg>
        {% else %}
        <div class="payment-img">
          <img src="{{ section.settings.payment-img |  img_url: 'master' }}" alt="Payment Image">
        </div>
      {% endif %}
    </div>
  </section>
</div>

<script>
        var action="click";
        var speed="500";
  
  $(document).ready(function() {
    $('li.footer-main-links i.down-arrow.fa.fa-angle-down').on(action, function() {
        $(this).next()
            .slideToggle(speed)
                .siblings('ul.mynav-footer-child-list-toggle')
                    .slideUp();
    });
  
    
    let navmenu = document.querySelectorAll(".down-arrow");
    navmenu.forEach(item => {
      item.addEventListener("click", (e) => {
        let type = e.currentTarget;
        type.classList.toggle("active");
      });
    });
  
  });
</script>

{% schema %}
  {
    "name": "Custom Footer",
    "settings": [
      {
        "type": "image_picker",
        "id": "footer-logo",
        "label": "Footer Logo"
      },
      {
        "type": "text",
        "id": "address",
        "label": "Address",
        "default": "Address"
      },
      {
        "type": "text",
        "id": "email",
        "label": "Email",
        "default": "email@.com"
      },
      {
        "type": "text",
        "id": "number",
        "label": "Phone Number",
        "default": "123987456"
      }, {
        "type": "link_list",
        "id": "footer-link",
        "label": "Footer Menu",
        "default": "footer"
      }, {
        "type": "text",
        "id": "footer-title",
        "label": "Footer Title",
        "default": "title"
      }, {
        "type": "text",
        "id": "footer-content",
        "label": "Footer Subscribe",
        "default": "content"
      }, {
        "type": "text",
        "id": "caption",
        "label": "Caption",
        "default": "caption"
      }, {
        "type": "image_picker",
        "id": "payment-img",
        "label": "Payment Image"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Service Block",
        "limit": 5,
        "settings": [
          {
            "type": "textarea",
            "id": "svg-img",
            "label": "Service Image",
            "default": "Service Image"
          }, {
            "type": "text",
            "label": "Service Heading",
            "id": "services-head",
            "default": "Head"
          }, {
            "type": "text",
            "label": "Services Content",
            "id": "services-content",
            "default": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Footer"
      }
    ]
  }
{% endschema %}